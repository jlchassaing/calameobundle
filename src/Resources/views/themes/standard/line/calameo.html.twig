<div class="content-view-line linkBloc clearfix">
    {% if not ez_field_is_empty( content, 'couv' ) %}
        <div class="image pull-left">
            <a href="{{ ez_path(location) }}" >
                <img src="{{ calameo_poster(content,'url') }}" width="100%" />
            </a>
        </div>
    {% endif %}
    {% if header is defined and header == "h3" %}
        <h3><a href="{{ ez_path(location) }}" >{{ ez_content_name(content) }} </a></h3>
        {% set shorten=79 %}
    {% else %}
        <h2><a href="{{ ez_path(location) }}" >{{ ez_content_name(content) }}</a></h2>
        {% set shorten=150 %}
    {% endif %}
    {{ ez_render_field(content,'intro') }}
</div>